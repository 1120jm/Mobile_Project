<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_fail"
    android:layout_width="855px"
    android:layout_height="650.96px"
    android:clipToOutline="true"
    >

    <TextView
        android:id="@+id/text_find_hak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="123dp"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="학번 찾기"
        android:textAppearance="@style/some_id" />

    <View
        android:id="@+id/line_1"
        android:layout_width="800px"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="105px"
        android:background="@drawable/line_1" />
    <TextView
        android:id="@+id/find_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="80px"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140px"
        android:text="이름"
        android:textAppearance="@style/some_id"
        android:gravity="center_vertical"
        />
    <EditText
        android:id="@+id/edit_id"
        android:layout_width="689.34px"
        android:layout_height="85.84px"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="80px"
        android:layout_alignParentTop="true"
        android:layout_marginTop="215px"
        android:background="@drawable/edit_id"
        android:elevation="10dp"
        android:hint="이름을 입력하세요"
        android:paddingLeft="27px"
        android:textSize="36px"
        />
    <TextView
        android:id="@+id/find_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="80px"
        android:layout_alignParentTop="true"
        android:layout_marginTop="325px"
        android:text="생년월일"
        android:textAppearance="@style/some_id"
        android:gravity="center_vertical"
        />

    <EditText
        android:id="@+id/edit_pass"
        android:layout_width="689.34px"
        android:layout_height="85.84px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80px"
        android:layout_marginTop="390px"
        android:background="@drawable/edit_id"
        android:elevation="10dp"
        android:hint="생년월일을 입력하세요"
        android:paddingLeft="27px"
        android:textSize="36px" />

    <android.widget.Button
        android:id="@+id/submit_btn"
        android:layout_width="427.89px"
        android:layout_height="105.87px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="154dp"
        android:layout_marginTop="197dp"
        android:background="#FF002057"
        android:text="확인"
        android:textColor="#ffffff" />

    <android.widget.Button
        android:id="@+id/cancel_btn"
        android:layout_width="427.89px"
        android:layout_height="105.87px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="197dp"
        android:background="#ffffff"
        android:text="취소"
        android:textColor="#000000" />

</RelativeLayout>
